<div class = "wrapper_bg wrapper">
  
  <div class="main">


    
    <div class="contents">
      <div class="contents-top">
        <div class="title1">
          <h1>応用物理学科</h1>
        </div>

        <div class="contents-top-item">
          <h2 data-no-turbolink><%= link_to '今週の小テスト', events_path %></h2>
          
          <ul>
            
            <% @tests.each do |test| %>
            <li>
              <% if test.event_type == '小テスト'  %>
              <%= test.name %>:
              <%= test.deadline %>まで
              <% end %>
            </li>
        </ul>
          <% end %>
        </div>

        <div class="contents-top-item">
          <h2 data-no-turbolink><%= link_to '今週のレポート', events_path %></h2>
          
          <ul>
            
            <% @reports.each do |report| %>
            <li>
              <% if report.event_type == 'レポート'  %>
              <%= report.name %>:
              <%= report.deadline %>まで
              <% end %>
            </li></ul>
          <% end %>
        </div>

        <div class="contents-top-item">
          <h2 data-no-turbolink><%= link_to 'その他', events_path %></h2>
          
        <ul>
          <% @reports.each do |report| %>
            <li>
              <% if report.event_type == 'テスト'or report.event_type == 'その他'  %>
              <%= report.name %>:
              <%= report.deadline %>まで
              <% end %>
            </li></ul>
          <% end %>
        </div>

      </div>
    </div>


  </div>
</div>